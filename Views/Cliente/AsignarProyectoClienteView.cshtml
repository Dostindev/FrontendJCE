@using FrontendApi.Models

@model ProyectosCliente

<div class="container">

    <h3 class="text-center">Proyectos</h3>

    <form method="post" asp-action="ProcesarProyectoSeleccionado">
        <input type="hidden" asp-for="idCliente" />

        @foreach (var proyecto in Model.proyectos)
        {
            <div class="form-check">
                <input class="form-check-input" type="radio" id="proyecto-@proyecto.IdProyecto" name="ProyectoSeleccionado" value="@proyecto.IdProyecto">
                <label class="form-check-label" for="proyecto-@proyecto.IdProyecto">
                    @proyecto.Descripción - @proyecto.Fecha.ToString("dd/MM/yyyy")
                </label>
            </div>
        }

        <button type="submit" class="btn btn-primary my-3">Enviar</button>
    </form>
</div>

