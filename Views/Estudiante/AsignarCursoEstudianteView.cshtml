@using FrontendApi.Models

@model CursosEstudiante

<div class="container">

    <h3 class="text-center">Cursos</h3>

    <form method="post" asp-action="ProcesarCursoSeleccionado">
        <input type="hidden" asp-for="idEstudiante" />

        @foreach (var curso in Model.cursos)
        {
            <div class="form-check">
                <input class="form-check-input" type="radio" id="curso-@curso.IdCurso" name="CursoSeleccionado" value="@curso.IdCurso">
                <label class="form-check-label" for="curso-@curso.IdCurso">
                    @curso.Descripcion - @curso.Fecha.ToString("dd/MM/yyyy")
                </label>
            </div>
        }

        <button type="submit" class="btn btn-primary my-3">Enviar</button>
    </form>

</div>

